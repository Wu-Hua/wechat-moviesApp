/**app.wxss**/
page {
  background: #f7f9fb;
}

.layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.5);
}

.btn-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #efeff1;
}

.btn-box button {
  border-radius: 0;
  backgruond: #fff;
  border-top: 1px solid #efeff1;
}

.btn-box button:nth-child(3) {
  border-top: 10rpx solid #efeff1;
}

.btn-box button::after {
  border: none;
}

.hide-layer {
  display: none
}

.movie-detail-box {
  width: 85%;
  height: 67vh;
  margin: 100rpx auto 0rpx;
  background: #fff;
  border: 2px solid #edeff0;
  border-radius: 10rpx;
  position: relative;
  padding-top: 230rpx;
  text-align: center;
}

.movie-detail-box .movies-image {
  width: 200rpx;
  height: 300rpx;
  position: absolute;
  top: -80rpx;
  left: 50%;
  margin-left: -100rpx;
}

.unlogin-card {
  display: flex;
  align-items: center;
  margin: 50rpx 27rpx 0;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.unlogin-head {
  flex-shrink: 0;
  margin-left: 53rpx;
  height: 100rpx;
  width: 100rpx;
  background: #F5E069;
  border-radius: 50%;
}

.unlogin-info {
  flex: 1;
  margin-left: 31rpx;
}

.unlogin-text {
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}

.unlogin-tips {
  margin-top: 6rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #8B8B8B;
}

.unlogin-btn {
  margin: 34rpx auto 0;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #F5E069;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  color: #34373D;
  font-weight: bold;
}