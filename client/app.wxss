/**app.wxss**/
page {
  background: #f7f9fb;
}
.layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.5);
}
.btn-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #efeff1;
}
.btn-box button {
  border-radius: 0;
  backgruond: #fff;
  border-top: 1px solid #efeff1;
}
.btn-box button:nth-child(3) {
  border-top: 10rpx solid #efeff1;
}
.btn-box button::after {
  border: none;
}
.hide-layer {
  display: none
}
.movie-detail-box {
  width: 85%;
  height: 67vh;
  margin: 100rpx auto 0rpx;
  background: #fff;
  border: 2px solid #edeff0;
  border-radius: 10rpx;
  position: relative;
  padding-top: 230rpx;
  text-align: center;
}
.movie-detail-box .movies-image {
  width: 200rpx;
  height: 300rpx;
  position: absolute;
  top: -80rpx;
  left: 50%;
  margin-left: -100rpx;
}