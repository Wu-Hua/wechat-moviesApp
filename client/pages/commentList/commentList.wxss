/* client/pages/commentList/commentList.wxss */
.comment-box {
  padding: 40rpx 0 100rpx;
}
.comment-card {
  border-top: 1px solid #efeff1;
  border-bottom: 1px solid #efeff1;
  display: flex;
  padding: 20rpx;
  background: #fff;
}

.comment-avatar {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment-box-right {
  margin-left: 20rpx;
}

.comment-username {
  line-height: 100rpx;
}

.comment-content {
  width: 500rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}