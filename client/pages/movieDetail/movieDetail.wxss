/* client/pages/movieDetail/movieDetail.wxss */
.movie-detail-box {
  width: 85%;
  margin: 0 auto;
  background: #fff;
  margin-top: 200rpx;
  margin-bottom: 50rpx;
  border: 2px solid #edeff0;
  border-radius: 10rpx;
  position: relative;
  padding-top: 220rpx;
  text-align: center;
}
.movies-image {
  width: 250rpx;
  height: 350rpx;
  position: absolute;
  top: -150rpx;
  left: 50%;
  margin-left: -125rpx;
}
.movie-description {
  text-align: left;
  width: 80%;
  font-size: 33rpx;
  margin: 30rpx auto 0;
}
.movie-detail-btn {
  display: flex;
  margin: 120rpx auto 50rpx;
}
.movie-detail-btn button {
  font-size: 30rpx;
  background: #fff;
  color: #7d97ad;
}